{% extends "layout.html.twig" %}

{% block title %}{% trans %}Ver Registro{% endtrans %}{% endblock %}

{% block container %}
    <h1>{% trans %}Gestor de claves{% endtrans %}</h1>    

    {% for message in app.flashes('notice') %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">{%trans%}nombre{% endtrans %}</th>
                <th scope="col">{% trans %}username{% endtrans %}</th>
                <th scope="col">{% trans %}password{% endtrans %}</th>
                <th scope="col">{% trans %}email{% endtrans %}</th>
                <th scope="col">{% trans %}commentario{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>            
                <tr>
                    <th scope="row">{{key}}</th>
                    <td>{{ (register.username is defined)? register.username : '' }}</td>
                    <td>{{ (register.password is defined)? register.password : '' }}</td>
                    <td>{{ (register.email is defined)? register.email : '' }}</td>
                    <td>{{ (register.comment is defined)? register.comment: '' }}</td>
                </tr>            
        </tbody>
    </table>

{% endblock %}

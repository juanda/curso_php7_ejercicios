{% extends "layout.html.twig" %}

{% block title %}Listar clave{% endblock %}

{% block container %}
    <h1>Gestor de claves</h1>    

    {% for message in app.flashes('notice') %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">name</th>
                <th scope="col">username</th>
                <th scope="col">password</th>
                <th scope="col">email</th>
                <th scope="col">comment</th>
            </tr>
        </thead>
        <tbody>
            {% for key, item in registers%}
                <tr>
                    <th scope="row">{{key}}</th>
                    <td>{{ (item.username is defined)? item.username : '' }}</td>
                    <td>{{ (item.password is defined)? item.password : '' }}</td>
                    <td>{{ (item.email is defined)? item.email : '' }}</td>
                    <td>{{ (item.comment is defined)? item.comment: '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

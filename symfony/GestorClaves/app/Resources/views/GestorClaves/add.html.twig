{% block container %}
    <h1>Gestor de claves</h1>

    {% for message in app.flashes('notice') %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% if json_invalid is defined %}
        <div class="alert alert-danger" role="alert">
            {{ json_invalid }}
        </div>
    {% endif %}

    {% if errors is defined%}
        {% for error in errors %}
            <div class="alert alert-danger" role="alert">
                {{ error.message }}
            </div>
        {% endfor %}
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
